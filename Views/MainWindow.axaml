<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WallMod.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		Width="1500"
		Height="750"
        MinWidth="700"
        MinHeight="300"
        x:Class="WallMod.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/wallmodicon.ico"
        Title="WallMod"
		Name="MainWindowAxaml"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Navy"
                    TintOpacity="1"
                    MaterialOpacity="0.25" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>

		<Grid Margin="24" x:Name="MainGrid" IsVisible="{Binding MainGridVisibility}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="2*" MinWidth="280"/>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" MinWidth="350"/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<!-- Left Pane: Image Gallery and Controls & History ========= -->
			<Border Grid.Column="0" Background="Black" CornerRadius="10" Margin="8">
				<Panel>


					<!-- Image Gallery Section -->
					<Grid IsVisible="{Binding IsImageGalleryViewVisible}">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>

						<ProgressBar Grid.Row="0" Minimum="0" Maximum="100" Value="{Binding ImgLoadProgress}" Height="15" Background="Gray" Foreground="BlueViolet" VerticalAlignment="Top" CornerRadius="10,0"/>

						<Button Grid.Row="1" Content="Filter" Command="" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0, 6, 4, 0">
							<Image Source="avares://Wallmod/Assets/filtericon.png" Width="17" Height="17"></Image>
						</Button>

						<Button Grid.Row="1" Content="Set Directory" Command="{Binding selectedDirectory}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4, 6, 0, 0">
							<Image Source="avares://Wallmod/Assets/addfoldericon.png" Width="20" Height="20"></Image>
						</Button>
						<Button Grid.Row="2" Content="Upload" Command="{Binding uploadClicked}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4, 4, 0, 0">
							<Image Source="avares://Wallmod/Assets/addimgicon.png" Width="20" Height="20"></Image>
						</Button>

						<Button Grid.Row="3" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="4, 0, 0, 6" Command="{Binding viewHistoryButton}">
							<Image Source="avares://Wallmod/Assets/historyicon.png" Width="20" Height="20"/>
						</Button>

						<TextBlock Grid.Row="1" Text="{Binding CurrentSelectedDirectory}" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 6, 0, 0" MaxWidth="300" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" />

						<Grid Grid.Row="3" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Bottom">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="*"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<TextBlock Grid.Row="0" Text="+"  Margin="2, 0, 8, 0" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right"/>
							<Slider Grid.Row="1" x:Name="ThumbnailZoomSlider" Orientation="Vertical" Foreground="Blue" Minimum="50" Maximum="300" Value="{Binding ThumbnailZoomLevel}" HorizontalAlignment="Left" Margin="2" Width="35" Height="100" VerticalAlignment="Center"/>
							<TextBlock Grid.Row="2" Text="-" Margin="2, 0, 9, 0" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right"/>
						</Grid>

						<ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled"
									  VerticalAlignment="Stretch" Margin="45,12,45,15">
							<ItemsControl ItemsSource="{Binding DisplayWallpaperList}">
								<ItemsControl.ItemsPanel>
									<ItemsPanelTemplate>
										<WrapPanel Orientation="Horizontal"/>
									</ItemsPanelTemplate>
								</ItemsControl.ItemsPanel>

								<ItemsControl.ItemTemplate>
									<DataTemplate>
										<StackPanel Orientation="Vertical" Margin="10" PointerPressed="OnImageTapped">
											<Image Source="{Binding ImageThumbnailBitmap}" Width="{Binding Value, ElementName=ThumbnailZoomSlider}"/>
										</StackPanel>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
						</ScrollViewer>
					</Grid>




					<!-- History Section -->
					<Grid IsVisible="{Binding IsHistoryViewVisible}">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*" />
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>

						<TextBlock Text="History" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Margin="0,16" Grid.Row="0"/>

						<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
							<ItemsControl ItemsSource="{Binding HistoryWallpaperList}">
								<ItemsControl.ItemsPanel>
									<ItemsPanelTemplate>
										<StackPanel Orientation="Vertical"/>
									</ItemsPanelTemplate>
								</ItemsControl.ItemsPanel>
								<ItemsControl.ItemTemplate>
									
									<DataTemplate>
										<StackPanel Orientation="Vertical">
											<Border Margin="50,0,50,10">
												<Grid>
													<Grid.ColumnDefinitions>
														<ColumnDefinition Width="*"/>
														<ColumnDefinition Width="Auto"/>
													</Grid.ColumnDefinitions>

													<StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
														<TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
														<TextBlock Text="{Binding FilePath}" FontSize="10" Foreground="Gray"/>
													</StackPanel>

													<Image Grid.Column="1" Source="{Binding ImageThumbnailBitmap}" Width="160" VerticalAlignment="Center" Margin="20,0,0,0"
														   PointerPressed="OnImageTapped"/>
												</Grid>
											</Border>
											
											<Border Height="1" Background="Gray" Margin="40,0,40,10"/>
											
										</StackPanel>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
							
						</ScrollViewer>

						<!-- Temp Back Button (position is good tho) -->
						<Button Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="4, 0, 0, 6" Command="{Binding viewHistoryButton}">
							<Image Source="avares://Wallmod/Assets/historyicon.png" Width="20" Height="20"/>
						</Button>
					</Grid>



				</Panel>
			</Border>


			<!-- GridSplitter: Allows Resizing Between Left and Right Sections ========= -->
			<GridSplitter Grid.Column="1" Grid.RowSpan="1" Width="5" Background="DarkTurquoise" Margin="0,25,0,25"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          ShowsPreview="False" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext"/>


			<!-- Right Section: Preview and Controls ========= -->
			<Border Grid.Column="2" Background="#707070" CornerRadius="10" Margin="8">
				<ScrollViewer VerticalScrollBarVisibility="Auto">
					<Grid Margin="6">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="Auto" />
						</Grid.ColumnDefinitions>

						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>

						<TextBlock Text="Preview" FontWeight="Bold" FontSize="16"
								   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
								   HorizontalAlignment="Center"/>

						<Button Content=">" Click="EnlargePreviewImg"
								Grid.Row="0" Grid.Column="1"
								HorizontalAlignment="Right">
							<Image Source="avares://Wallmod/Assets/enlarge-icon.png"
								   Width="14" Height="14"/>
						</Button>

						<!-- Monitor Preview -->
						<Grid Grid.Row="1" Grid.ColumnSpan="2">
							<Image x:Name="PreviewImage"
								   Source="{Binding CurrentWallpaperPreview}"
								   Stretch="Uniform"
								   IsVisible="True"/>

							<!-- Draggable Rect -->
							<Canvas x:Name="OverlayCanvas"
									IsHitTestVisible="True"
									Panel.ZIndex="999">
								<Rectangle x:Name="DragRect"
										   Fill="LightBlue"
										   Opacity="0.4"
										   IsVisible="False"
										   Width="100"
										   Height="100"
										   PointerPressed="DragRect_PointerPressed"
										   PointerMoved="DragRect_PointerMoved"
										   PointerReleased="DragRect_PointerReleased"/>
							</Canvas>
						</Grid>

						<!-- Wallpaper Info -->
						<Grid Grid.Row="2" Grid.ColumnSpan="2">
							
							<Button Content=">" Click="OpenImageClicked"
								Margin="2"
								HorizontalAlignment="Left">
								<Image Source="avares://Wallmod/Assets/open-icon.png"
									   Width="12" Height="10"/>
							</Button>
							<TextBlock Text="{Binding CurrentWallpaperName}"
									   HorizontalAlignment="Left" FontSize="15"
									   Foreground="#FFD82E" FontWeight="Bold" Margin="35, 4, 0, 0"
									   MaxWidth="180" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>

							<TextBlock Text="{Binding CurrentWallpaperSize}"
									   HorizontalAlignment="Right" FontSize="15"
									   Foreground="#FF7C00" FontWeight="Bold" Margin="4"/>
						</Grid>


						<!-- Monitors List -->
						<Grid Grid.Row="3" Grid.ColumnSpan="2" Margin="0,32,0,8">
							<TextBlock Text="Monitors:" FontSize="16"
									   VerticalAlignment="Center" Margin="8,0,0,0"/>

							<Button Content="Redetect Monitors" Command="{Binding detectMonitorsButton}"
									HorizontalAlignment="Right" Margin="10, 0, 0, 0">
								<Image Source="avares://Wallmod/Assets/refresh-icon.png"
									   Width="14" Height="14"/>
							</Button>
						</Grid>

						<ItemsControl ItemsSource="{Binding MonitorList}" HorizontalAlignment="Center" Grid.Row="4" Grid.ColumnSpan="2">
							<ItemsControl.ItemsPanel>
								<ItemsPanelTemplate>
									<WrapPanel Orientation="Horizontal"/>
								</ItemsPanelTemplate>
							</ItemsControl.ItemsPanel>

							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<Grid Canvas.Left="{Binding UIBounds.X}" Canvas.Top="{Binding UIBounds.Y}" PointerPressed="OnPreviewMonitorTapped">
										<Rectangle Width="{Binding UIBounds.Width}"
												   Height="{Binding UIBounds.Height}"
												   Fill="{Binding FillColour}"
												   Stroke="White" StrokeThickness="2"/>
										<Image Source="{Binding CurrWallpaper.ImageThumbnailBitmap}" Width="{Binding UIBounds.Width}" Height="{Binding UIBounds.Height}"/>
										<TextBlock Text="{Binding IsPrimary}"
												   HorizontalAlignment="Center"
												   VerticalAlignment="Center"/>
									</Grid>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>

						<!-- Selecting Monitor Dropdown / Handling -->
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="5" Grid.ColumnSpan="2" Margin="0,6,0,24">
							<Button Content="Select All" Click="OnSelectAllClicked" Margin="4"/>
							<ComboBox ItemsSource="{Binding WallpaperStyleList}"
									  SelectedItem="{Binding SelectedWallpaperStyle}"
									  IsEnabled="{Binding StyleDropdownEnabled}"
									  Width="100"
									  Margin="5"/>
						</StackPanel>

						<!-- Set Wallpaper Button -->
						<Button Name="SetBackgroundButton"
									Content="Set As Desktop Background"
									Width="220" Click="OnSetWallpaperClicked"
									Background="DarkGreen"
									HorizontalAlignment="Stretch"
									VerticalAlignment="Center"
									HorizontalContentAlignment="Center"
									Margin="0,10,0,0"
									Grid.Row="6" Grid.ColumnSpan="2"
									IsEnabled="False"/>


						<!-- Settings Button -->
						<Button Content="Settings" Command="{Binding settingsButton}"
								Grid.Row="7" Grid.ColumnSpan="2"
								VerticalAlignment="Bottom" HorizontalAlignment="Right">
							<Image Source="avares://Wallmod/Assets/settings-icon.png"
								   Width="18" Height="18"/>
						</Button>

					</Grid>
				</ScrollViewer>
			</Border>


		</Grid>

		<!-- HUGE Image Enlargement Display (covers entire area)-->
		<Image x:Name="EnlargedPreviewImage"
               Grid.RowSpan="4"
               Grid.ColumnSpan="4"
               Source="{Binding CurrentWallpaperPreview}"
               Stretch="Uniform"
               IsVisible="False"
               PointerPressed="OnEnlargedImageClick" />


		<!-- Settings (temp currently put into same vm) -->
		<Grid Margin="38" Name="SettingsGrid" IsVisible="{Binding SettingsViewVisibility}">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Title + Back Button -->
			<Grid Grid.Row="0" Margin="0,0,0,40" Grid.ColumnSpan="2">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Button Content="Back"
						Command="{Binding settingsButton}"
						Grid.Column="1"
						HorizontalAlignment="Left"
						VerticalAlignment="Center">
				</Button>

				<TextBlock Text="Settings"
						   FontSize="24"
						   FontWeight="Bold"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"
						   Grid.Column="0"/>


			</Grid>

			<!-- Show CPU/Memory Usage -->
			<StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10">
				<TextBlock Text="Show CPU/Memory Usage:" VerticalAlignment="Center"/>
				<ToggleSwitch IsChecked="{Binding}"/>
			</StackPanel>

			<!-- Allow Save History -->
			<StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10">
				<TextBlock Text="Allow Save History:" VerticalAlignment="Center"/>
				<ToggleSwitch IsChecked="{Binding AllowSaveHistory}"/>
			</StackPanel>

			<!-- Delete History -->
			<StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="10">
				<TextBlock Text="Delete History:" VerticalAlignment="Center"/>
				<Button Content="🗑️" Command="{Binding deleteHistoryButton}" Background="DarkRed"/>
			</StackPanel>

			<!-- App Background Color Selection -->
			<StackPanel Grid.Row="4" Orientation="Vertical" Spacing="10">
				<TextBlock Text="App Background Color:" VerticalAlignment="Center"/>

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<!-- color picker here ?? -->

				</Grid>
			</StackPanel>

			<!-- Allow App Running in Background -->
			<StackPanel Grid.Row="5" Orientation="Horizontal" Spacing="12">
				<TextBlock Text="Stay Running in Background:" VerticalAlignment="Center"/>
				<ToggleSwitch IsChecked="{Binding StayRunningInBackground}"/>
			</StackPanel>

			<!-- GitHub Button -->
			<StackPanel Grid.Row="6" Orientation="Horizontal" Spacing="12">
				<TextBlock Text="GitHub Repository:" VerticalAlignment="Center"/>
				<Button Content="Open GitHub" Command="{Binding openGithubButton}"/>
			</StackPanel>

		</Grid>
		
	</Panel>

</Window>
